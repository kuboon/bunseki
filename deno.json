{
  "workspace": [
    "./client",
    "./otlp"
  ],
  "tasks": {
    "dev": "deno serve -P=serve --watch serve.ts",
    "serve": "deno serve -P=serve serve.ts"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.10.8",
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.2/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.14.2/"
  },
  "unstable": ["bundle", "fmt-component", "temporal"],
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "proseWrap": "preserve"
  },
  "permissions": {
    "serve": {
      "read": ["./otlp"]
    }
  }
}
