{
  "workspace": [
    "./client",
    "./otlp"
  ],
  "tasks": {
    "dev": "deno serve -P=serve --watch serve.ts",
    "serve": "deno serve -P=serve serve.ts",
    "generate-dummy": "deno run -P=serve --env otlp/test/generateDummyData.ts"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.10.8",
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.2/",
    "lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.13/jsx-runtime.ts",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.14.2/"
  },
  "unstable": ["bundle", "fmt-component", "temporal", "kv"],
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "proseWrap": "preserve"
  },
  "permissions": {
    "serve": {
      "read": ["./otlp", "./client/_site", ".db"],
      "write": ["./client/_site", ".db"]
    }
  }
}
